<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/near_background"
    android:orientation="vertical" >
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@color/header_bg" >
     <Button
       android:id="@+id/back"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:background="@null"       
       />
   <TextView
       android:id="@+id/tv_header_tittle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:textSize="16sp"
       android:textColor="@color/default_red"
       android:textStyle="bold"    
       />
   <CheckBox
       android:id="@+id/setting"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dip"
       android:button="@null"
       android:background="@drawable/collect_chebox"
       
       />
   <Button
       android:id="@+id/share"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_marginRight="10dip"
       android:layout_toLeftOf="@id/setting"
       android:background="@drawable/share"
       
       
       />
   </RelativeLayout>
    <ListView
        android:id="@+id/lv_pj"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white"
        android:divider="@drawable/shadow_light"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:paddingTop="5dip"
            android:text="￥"
            android:textColor="#ff4978"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon"
            android:textColor="#ff4978"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/price"
            android:text="￥"
            android:textColor="@color/gray_tg_detail"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/prime_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon1"
            android:textColor="@color/gray_tg_detail"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buybtn"
            android:layout_width="160dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/red_alltg_price"
            android:onClick="onBuyNowClick"
            android:text="@string/btn_business_buynow"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>
