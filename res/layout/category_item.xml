<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="14dip" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:contentDescription="@string/nothing"     
         />

    <Button
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="14dip"
        android:layout_toRightOf="@id/pic"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tittle"
        android:layout_below="@id/tittle"
        android:layout_marginTop="8dip"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub1"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub1"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub1"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub2"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sub4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub1"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub3"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub1"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub4"
        android:background="@color/transparent"
        android:text="@string/etc"
        android:textColor="@color/default_grey1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sub5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tittle"
        android:layout_below="@id/sub1"
        android:layout_marginTop="7dip"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sub6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub5"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub5"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sub7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub6"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub6"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/sub8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sub7"
        android:layout_marginLeft="18dip"
        android:layout_toRightOf="@id/sub7"
        android:background="@color/transparent"
        android:text="@string/food"
        android:textColor="@color/default_grey1"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>