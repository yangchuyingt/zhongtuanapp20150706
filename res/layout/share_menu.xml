<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/default_black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cancel"
        android:layout_marginBottom="10dip"
        android:background="@color/white"
        android:paddingBottom="17dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/kj"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/kj"
            android:text="QQ空间"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/xl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/xl"
            android:text="新浪微博"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tx"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/tx"
            android:text="腾讯微博"
            android:textColor="@color/default_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="31dip"
        android:paddingTop="17dip" >

        <Button
            android:id="@+id/wx"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/wx"
            android:text="微信"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/qq"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/qq"
            android:text="QQ"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dx"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/dx"
            android:text="短信"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

    </LinearLayout>



</RelativeLayout>