<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <include layout="@layout/x_bar_special_sale_lady_title"/>
 
     <RadioGroup 
         android:id="@+id/rg_sale_lady_detial"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@android:color/white"
         android:layout_marginTop="1dp"
         android:layout_marginBottom="1dp"
          >
         <RadioButton 
             android:id="@+id/rb_sale_lady_zonghe"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="综合"
             android:paddingTop="13dp"
             android:paddingBottom="13dp"
             android:textColor="@color/special_sale_lady_radiobutton_textcolor"
             android:button="@null"
             android:textSize="14sp"
             android:checked="true"
             android:gravity="center"/>
         <RadioButton 
             android:id="@+id/rb_sale_lady_xiaoliang"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:text="销量"
              android:paddingTop="13dp"
             android:paddingBottom="13dp"
             android:textColor="@color/special_sale_lady_radiobutton_textcolor"
             android:textSize="14sp"
             android:button="@null"
             android:layout_height="match_parent"
             android:gravity="center"/>
          <RadioButton 
             android:id="@+id/rb_sale_lady_price"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:text="价格"
              android:paddingTop="13dp"
             android:paddingBottom="13dp"
             android:textColor="@color/special_sale_lady_radiobutton_textcolor"
             android:textSize="14sp"
             android:button="@null"
             android:layout_height="match_parent"
             android:drawableRight="@drawable/sale_lady_price_right_draw"
             android:layout_marginRight="25dp"
             android:gravity="center"/>
     </RadioGroup>
   <GridView 
       android:id="@+id/gv_sale_lady_item"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center_horizontal"
       android:background="@drawable/near_background"
       android:numColumns="2">
   </GridView>
