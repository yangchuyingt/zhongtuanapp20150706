<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/near_background"
    android:orientation="vertical" >

    <include layout="@layout/x_bar_sale" />
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/sv_version2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_sale_v2" >

        <RelativeLayout
            android:id="@+id/rl_refresh"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bg_gray" >

            <TextView
                android:id="@+id/tv_refresh_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="100dp"
                android:text="下拉刷新"
                android:textColor="#9b9b9b" />

            <ImageView
                android:id="@+id/iv_specail_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/tv_refresh_show"
                android:layout_marginLeft="60dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_adver"
                android:layout_width="match_parent"
                android:layout_height="112dip"
                android:background="@drawable/white_border" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/ll_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/vp_adver"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

          
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_fouritem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/ll_half_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_today_half_price"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/today_half_price" />

                <TextView
                    android:id="@+id/tv_today_half_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="限量五折" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buyone_sendone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_buy_one_send_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/buy_one_send_one" />

                <TextView
                    android:id="@+id/tv_buy_one_send_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="买一送一" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tweenty_nine_nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_tweenty_nine_nine"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/tweenty_nine_nine" />

                <TextView
                    android:id="@+id/tv_tweenty_nine_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="29块9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_special_select"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_special_sale_select"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/special_sale_select" />

                <TextView
                    
                    android:id="@+id/tv_special_sale_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="爆款精选" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_sale_adv_part1"
                android:layout_width="0dp"
                android:layout_height="188dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:src="@drawable/sale_part1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="188dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_sale_adv_part2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/white"
                    android:src="@drawable/sale_part2" />
               <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:layout_alignParentLeft="@id/iv_sale_adv_part2"
                   android:layout_below="@id/iv_sale_adv_part2">
                     <ImageView
                    android:id="@+id/iv_sale_adv_part3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:src="@drawable/sale_part3" />

                <ImageView
                    android:id="@+id/iv_sale_adv_part4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_sale_adv_part2"
                    android:background="@color/white"
                    android:src="@drawable/sale_part4" />
               </LinearLayout>
              
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:text="今日特卖" />

        <GridView
            android:id="@+id/gv_gridview_tm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/near_background"
            android:gravity="center_horizontal"
            android:numColumns="2" >
        </GridView>
        <include layout="@layout/product_footer_v2"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>