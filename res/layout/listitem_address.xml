<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nothing"
        android:src="@drawable/shadow_heavy"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginTop="17dip"
        android:textColor="@color/default_black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_tel"
        android:layout_toRightOf="@id/tv_name"
        android:layout_alignBottom="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:textSize="16sp"
        android:textColor="@color/default_black"
        />
    <TextView
        android:id="@+id/tv_address_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="17dip"
        android:textSize="16sp"
        android:textColor="@color/default_black"
        />
    <TextView
        android:id="@+id/tv_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_address_pro"
        android:layout_alignBottom="@id/tv_address_pro"
        android:textSize="16sp"
        android:textColor="@color/default_black"
        />
    <TextView
        android:id="@+id/tv_address_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_address_city"
        android:layout_alignBottom="@id/tv_address_city"
        android:textSize="16sp"
        android:textColor="@color/default_black"
        />
    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginTop="10dip"
        android:layout_below="@id/tv_address_pro"
        android:textSize="14sp"
        android:textColor="@color/default_black"
        />
    <ImageView
        android:id="@+id/shadow1"
        android:layout_below="@id/tv_address_detail"
        android:layout_marginTop="17dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nothing"
        android:src="@drawable/shadow_light"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shadow1"
        android:layout_marginLeft="17dip"
        android:layout_marginTop="17dip"
        android:textSize="12sp"
        android:textColor="@color/default_black"
        />
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nothing"
        android:src="@drawable/shadow_heavy"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="17dip"       
        />
     <CheckBox
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/checkbox"
         android:background="@drawable/chebox_bg"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dip"
         android:layout_centerVertical="true"
         android:clickable="false"
         android:button="@null"
         android:visibility="gone"
         />
   <!--   <ImageView
         android:contentDescription="@string/nothing"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/image"
         android:background="@drawable/img_address"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dip"
         android:layout_centerVertical="true"
         android:clickable="false"
         android:button="@null"
         /> -->
         <ImageView 
             android:id="@+id/iv_isdefult_address"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"/>
   

</RelativeLayout>
