<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="305dp" 
    android:orientation="vertical"
    android:background="@android:color/white">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView 
        android:id="@+id/tv_phb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="排行榜"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
  <ImageView 
      android:layout_marginLeft="10dp"
      android:id="@+id/iv_num1"
      android:layout_width="217dp"
      android:layout_height="217dp"
      android:layout_below="@id/tv_phb"
      android:scaleType="fitXY"
      android:background="@drawable/zhongtuanimage"/>
  <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="27dp"
      android:id="@+id/rl_num1"
      android:layout_alignBottom="@id/iv_num1"
      android:layout_alignLeft="@id/iv_num1"
      android:background="@color/default_black"
      android:layout_alignRight="@id/iv_num1">
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已售 10"
          android:id="@+id/tv_sell_num1"
          android:textColor="@android:color/white"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:textSize="12sp"/>
       <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="￥100"
          android:id="@+id/tv_price_num1"
          android:textColor="@android:color/white"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          android:textSize="13sp"/>
     
  </RelativeLayout>
  <ImageView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/iv_number1"
      android:layout_alignTop="@id/iv_num1"
      android:layout_marginLeft="15dp"/>
  <ImageView
      
      android:id="@+id/iv_num2" 
      android:layout_width="110dp"
      android:layout_height="103dp"
      android:layout_below="@id/tv_phb"
      android:layout_toRightOf="@id/iv_num1"
      android:layout_marginLeft="10dp"
       android:scaleType="fitXY"
      android:background="@drawable/zhongtuanimage"/>
  <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="27dp"
      android:id="@+id/rl_num2"
      android:background="@color/default_black"
      android:layout_alignBottom="@id/iv_num2"
      android:layout_alignLeft="@id/iv_num2"
      android:layout_alignRight="@id/iv_num2">
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已售 10"
          android:id="@+id/tv_sell_num2"
          android:textColor="@android:color/white"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:textSize="12sp"/>
     
  </RelativeLayout>
   <ImageView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/iv_number2"
      android:layout_alignTop="@id/iv_num2"
      android:layout_alignLeft="@id/iv_num2"
      android:layout_marginLeft="5dp"/>
  <ImageView 
      android:layout_width="110dp"
      android:layout_height="103dp"
      android:layout_marginTop="10dp"
      android:id="@+id/iv_num3"
      android:layout_alignLeft="@id/iv_num2"
      android:layout_alignBottom="@id/iv_num1"
       android:scaleType="fitXY"
      android:background="@drawable/zhongtuanimage"/>
  <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="27dp"
      android:id="@+id/rl_num3"
      android:background="@color/default_black"
      android:layout_alignBottom="@id/iv_num3"
      android:layout_alignLeft="@id/iv_num3"
      android:layout_alignRight="@id/iv_num3">
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已售 10"
          android:id="@+id/tv_sell_num3"
          android:textColor="@android:color/white"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:textSize="12sp"/>
     
  </RelativeLayout>
   <ImageView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/iv_number3"
      android:layout_alignTop="@id/iv_num3"
      android:layout_alignLeft="@id/iv_num3"
      android:layout_marginLeft="5dp"/>
   </RelativeLayout>
</LinearLayout>
