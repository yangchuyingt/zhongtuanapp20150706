<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="102dip"
    android:descendantFocusability="blocksDescendants"
     >
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="130dip"
        android:layout_height="82dip"
        android:layout_marginTop="10dip"
		android:layout_marginLeft="10dip"
		android:scaleType="fitXY"
		android:paddingTop="2dip"
		android:paddingLeft="2dip"
        android:contentDescription="@string/nothing"
        />
    <ImageView
        android:id="@+id/img_product_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
		android:layout_marginLeft="10dip"
		android:src="@drawable/img_product_tag"
        android:contentDescription="@string/nothing"
        />
    <TextView
        android:id="@+id/tv_product_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="2dip"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/img_product"
        android:layout_alignTop="@id/img_product"
        android:textSize="16sp"
        android:textColor="@color/default_black"
        />
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_tg_detail"
        android:textSize="10sp"
        android:layout_marginTop="12dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        />
        <TextView 
        android:id="@+id/webview_product_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_below="@id/tv_product_tittle"
        android:layout_alignLeft="@id/tv_product_tittle"
            />
     
     <TextView      
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_product_tittle"
		android:layout_alignBottom="@id/img_product"     
        android:textSize="16sp"
        android:textColor="@color/red_alltg_price"
        android:layout_marginBottom="-4dip"
        />
     <TextView
        android:id="@+id/tv_product_price_decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_product_price"
		android:layout_alignBottom="@id/img_product"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/tv_price_lj"
        android:layout_marginLeft="4dip"
        android:text="立减5元"
        android:visibility="gone"
        />
    
    <TextView
        android:id="@+id/tv_product_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:textSize="10sp"
        android:text="shangpingmingchn"
        android:textColor="@color/gray_tg_detail"
		android:layout_alignBottom="@id/img_product"/>
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toLeftOf="@id/tv_product_sell"
        android:textColor="@color/gray_tg_detail"
		android:layout_alignBottom="@id/img_product"/>
</RelativeLayout>