<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearby_tab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_near_header"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/adsView"
            android:layout_width="fill_parent"
            android:layout_height="112dip"
            android:contentDescription="@string/nothing"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/adsView"
            android:layout_alignRight="@id/adsView"
            android:orientation="horizontal" 
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/adsView"
                android:paddingBottom="1dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dot_focus" />
            <ImageView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/adsView"
                android:paddingBottom="1dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dot_normal" />
            <ImageView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/adsView"
                android:paddingBottom="1dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dot_normal" />
            <ImageView
                android:id="@+id/dot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/adsView"
                android:paddingBottom="1dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dot_normal" />
            <ImageView
                android:id="@+id/dot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/adsView"
                android:paddingBottom="1dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dot_normal" />
        </LinearLayout>
        <!--  -->

        <RadioGroup
            android:id="@+id/ads_point"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dip"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/ads_guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/ads_point"
                android:focusable="false" />

            <RadioButton
                android:id="@+id/ads_guide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/ads_point"
                android:focusable="false" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/near_category_bg" >

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/near_category"
                android:onClick="onBusinessClick" >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing"
                    android:src="@drawable/btn_business" />

                <TextView
                    android:id="@+id/btn_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv1"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:text="@string/btn_business"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv3"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv4"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_1"
            android:layout_marginTop="1dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv5"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv6"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category" >

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv7"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl8"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:background="@drawable/near_category"
                android:onClick="onMoreCategoryClick" >

                <ImageView
                    android:id="@+id/iv8"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/nothing"
                    android:src="@drawable/btn_more" />

                <TextView
                    android:id="@+id/btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv8"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:paddingBottom="11dip"
                    android:paddingTop="10dip"
                    android:text="@string/btn_more"
                    android:textColor="@color/default_black"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nothing"
        android:src="@drawable/shadow_heavy" />

    <ImageView
        android:id="@+id/shadow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/shadow_heavy"
        android:contentDescription="@string/nothing" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/guess_u_like"
            android:textColor="@color/default_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_all_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/transparent"
            android:drawablePadding="5dip"
            android:drawableRight="@drawable/all_tg_icon"
            android:focusable="false"
            android:text="@string/btn_all_tg"
            android:textColor="@color/red_alltg_price"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_light"
        android:contentDescription="@string/nothing" />

</LinearLayout>