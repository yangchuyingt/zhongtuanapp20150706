<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
             <!-- 设置背景填充色为黑色 -->
            <solid android:color="#ff4978" />
            <!-- 设置边框宽度为1dp，边框颜色为白色 -->
            <stroke android:width="1dp" android:color="#ff4978" />
            <!-- 设置按钮圆角半径为5dp -->
            <corners android:radius="5dp" />
            <!-- 设置按钮中间文字距上下左右都为10dp的间距 -->
            <padding android:bottom="8dp" android:left="40dp" android:right="40dp" android:top="8dp" />
       

</shape>
